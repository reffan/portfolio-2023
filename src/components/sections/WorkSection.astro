---
const works = await Astro.glob('../../pages/work/*.mdx')
import { tagLabels } from '@scripts/utilities'
---

<section class='work fades-in'>
  <div class='section-container'>
    <h1>Work</h1>
    <ul class='work-list'>
      {
        works.map((work) => (
          <li class='slides-in'>
            <div class='thumbnails'>
              <a href={work.url}>
                <div class='thumbnails-container'>
                  <img
                    src={`/assets/work/${work.frontmatter.slug}/thumbnails/${work.frontmatter.thumbnails[0]}`}
                    alt=''
                  />
                  <img
                    src={`/assets/work/${work.frontmatter.slug}/thumbnails/${work.frontmatter.thumbnails[1]}`}
                    alt=''
                  />
                </div>
              </a>
            </div>
            <div class='text'>
              <a class='reverseAccent' href={work.url}>
                <h2>{work.frontmatter.title}</h2>
              </a>
              <ul class='tag-list'>
                {work.frontmatter.tags.map((tag) => (
                  <li>
                    {/* <a class='text-link' href={`/tags/${tag}`}> */}
                    {tagLabels[tag] || tag}
                    {/* </a> */}
                  </li>
                ))}
              </ul>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
